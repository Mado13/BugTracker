<% if flash[:alert] %>
  <div>
    <p align="center" class="flash-correct"><%= flash[:alert] %></p>
  </div>
<% end %>

<div class="form-container">
  <%= simple_form_for @user,
      defaults: {
                  input_html: { class: 'form-control'},
                  label_html: { class: 'form-label'}
                },
      url: url do |f| %>
    <div class="row">
      <div class="mb-3 col">
        <%= f.input :first_name, label: 'Enter first name: ' %>
      </div>
      <div class="mb-3 col">
        <%= f.input :last_name, label: 'Enter last name: ' %>
      </div>
    </div>
    <div class="row">
      <div class="mb-3 col">
        <%= f.input :role_id, label: 'Select role: ' ,collection: Role.all %>
      </div>
      <div class="mb-3 col">
        <%= f.input :email, label: 'Enter email: ' %>
      </div>
    </div>
    <div class="row">
      <div class="mb-3 col">
        <%= f.input :password, label: 'Enter password: ' %>
      </div>
      <div class="mb-3 col">
        <%= f.input :password_confirmation, label: 'Confirm password: ' %>
      </div>
    </div>
    <%= f.button :submit, class:"btn btn-success" %>
  <% end %>
</div>
