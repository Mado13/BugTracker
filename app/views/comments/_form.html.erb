<%= simple_form_for @new_comment, url: ticket_comments_path(@ticket), html: { class: 'form-outline mb-4' } do |f|%>
  <%= f.hidden_field :user_id %>
  <%= f.hidden_field :ticket_id %>
  <%= f.input :comment, label: false, input_html: { class: 'form-control' } %>
  <%= f.button :submit, "Leave a comment", class: "btn btn-success"%>
<% end %>
