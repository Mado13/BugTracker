<%= turbo_frame_tag dom_id(comment) do %>
  <div class="card mb-4">
    <div class="card-body">
      <p><%= comment.comment %></p>

      <div class="d-flex justify-content-between">
        <div class="d-flex flex-row align-items-center">
          <p class="small mb-0 ms-2"><%= comment.user.full_name %></p>
          <p class="small mb-0 ms-2">(<%= comment.user.role_name %>)</p>
        </div>
        <div class="d-flex flex-row align-items-center">
          <p class="small text-muted mb-0"><%= comment.updated_at.to_s(:short) %></p>
          <i
            class="far fa-thumbs-up mx-2 fa-xs text-black"
            style="margin-top: -0.16rem;"
          ></i>
          <p class="small text-muted mb-0">
            <%= link_to 'Edit', edit_comment_path(comment) %>
          </p>
        </div>
      </div>
    </div>
  </div>
<% end %>
