<%= turbo_frame_tag dom_id(comment) do %>
  <% present(comment, @user) do |comment_presenter| %>
  <div class="card mb-4">
    <div class="card-body">
      <p><%= comment.comment %></p>

      <div class="d-flex justify-content-between">
        <div class="d-flex flex-row align-items-center">
          <p class="small mb-0 ms-2"><%= comment.user.full_name %></p>
          <p class="small mb-0 ms-2">(<%= comment.user.role_name %>)</p>
        </div>
        <div class="d-flex flex-row align-items-center">
          <p class="small text-muted mb-0"><%= comment.updated_at.to_s(:short) %></p>
          <p class="small text-muted mb-0">
             <% if user.id == comment.user_id %>
                <%= link_to 'Edit', edit_comment_path(comment) %>
                <%= link_to 'Delete', comment_path(comment), method: :delete %>
             <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>
  <% end %>
<% end %>
