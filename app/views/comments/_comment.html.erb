<%= turbo_frame_tag dom_id(comment) do %>
  <div class="message-container">
    <li class="list-group-item d-flex justify-content-between align-items-start">
      <div class="ms-2 me-auto">
        <div class="fw-bold" id="<%= dom_id comment %>"><%= comment.comment %></div>
        <small><%= "#{comment.user.full_name} (#{comment.user.role_name}) on (#{comment.created_at.to_s(:short)})" %></small>
        <%= link_do 'Edit', edit_comment_path(comment) %>
      </div>
    </li>
  </div>
<% end %>
