<main class="login-form">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">Log In</div>
                    <div class="card-body">
                        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                        <%= devise_error_messages! %>
                            <div class="form-group row">
                                 <%= f.label :email, class: 'col-md-4 col-form-label text-md-right' %>
                                <div class="col-md-6">
                                   <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
                                </div>
                            </div>

                            <div class="form-group row">
                                <%= f.label :password, class: 'col-md-4 col-form-label text-md-right' %>
                                <div class="col-md-6">
                                    <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control' %>
                                </div>
                            </div>

                              <% if devise_mapping.rememberable? %>
                                <div class="form-group form-check">
                                  <%= f.check_box :remember_me, class: 'form-check-input' %>
                                  <%= f.label :remember_me, class: 'form-check-label' do %>
                                    <%= resource.class.human_attribute_name('remember_me') %>
                                  <% end %>
                                </div>
                              <% end %>

                            <div class="col-md-6 offset-md-4" style='padding-left: 24px;'>
                                <%= f.submit 'Log In', class: 'btn btn-primary btn-block', style: 'width: 100%;' %>
                            </div>

                            <%= render 'devise/shared/links' %>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
    </div>

</main>
