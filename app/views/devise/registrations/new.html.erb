<main class="login-form">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">Register</div>
                    <div class="card-body">
                        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-container' }) do |f| %>
                        <%= devise_error_messages! %>
                            <div class="form-group row">
                                 <%= f.label :first_name, class: 'col-md-4 col-form-label text-md-right' %>
                                <div class="col-md-6">
                                    <%= f.text_field :first_name, class: 'form-control' %>
                                </div>
                            </div>

                            <div class="form-group row">
                                <%= f.label :last_name, class: 'col-md-4 col-form-label text-md-right' %>
                                <div class="col-md-6">
                                    <%= f.text_field :last_name, class: 'form-control' %>
                                </div>
                            </div>

                            <div class="form-group row">
                             <%= f.label :email, class: 'col-md-4 col-form-label text-md-right' %>
                              <div class="col-md-6">
                                <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
                              </div>
                            </div>

                            <div class="form-group row">
                             <%= f.label :role, 'Select Role', class: 'col-md-4 col-form-label text-md-right' %>
                              <div class="col-md-6">
                                <%= f.collection_select(:role_id, Role.all, :id, :name, {}, { :class => 'form-control' }) %>
                              </div>
                            </div>

                            <div class="form-group row">
                             <%= f.label :password, class: 'col-md-4 col-form-label text-md-right' %>
                              <div class="col-md-6">
                                <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control' %>
                              </div>
                            </div>

                            <div class="form-group row">
                             <%= f.label :password_confirmation, class: 'col-md-4 col-form-label text-md-right' %>
                              <div class="col-md-6">
                                <%= f.password_field :password_confirmation, autocomplete: 'current-password', class: 'form-control' %>
                              </div>
                            </div>


                            <div class="col-md-6 offset-md-4" style='padding-left: 24px;'>
                                <%= f.submit 'Sign Up', class: 'btn btn-primary btn-block', style: 'width: 100%;' %>
                            </div>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
    </div>

</main>
