<% if flash[:alert] %>
  <div>
    <p align="center" class="flash-error"><%= flash[:alert] %></p>
  </div>
<% end %>

<div class="form-container">
  <%= simple_form_for @project,
  defaults: {
              input_html: { class: 'form-control'},
              label_html: { class: 'form-label'}
            },
      url: url do |f| %>
    <div class="mb-3">
      <%= f.input :title, label: 'Enter project title: ' %>
    </div>
    <div class="mb-3">
      <%= f.input :description, label: 'Enter project description: ' %>
    </div>
    <div class="mb-3">
      <%=
          f.association :lead_developer,
          collection: @lead_developers,
          label_method: :email,
          value_method: :id,
          prompt: 'Please Select Lead Developer',
          label: false
      %>
    </div>
    <div class="mb-3">
      <%= current_user.admin_form_select_tag %>
    </div>
    <%= current_user.project_manager_hidden_fields %>

    <%= f.button :submit, class:"btn btn-success" %>
  <% end %>
</div>
